import pandas as pd
import numpy as np

import matplotlib.pyplot as plt
import seaborn as sns

from lifelines import KaplanMeierFitter, CoxPHFitter
from lifelines.statistics import logrank_test

sns.set(style="whitegrid", context="talk")
plt.rcParams["figure.figsize"] = (9, 6)

print("Survival analysis libraries loaded.")

DATA_PATH = "../data/processed/testicular_cancer_cleaned.csv"

df = pd.read_csv(DATA_PATH)

df.head()

# Inspect follow-up related columns
[df.columns[col] for col in range(len(df.columns)) if "days" in df.columns[col].lower()]

# Event: 1 = death or tumor persistence, 0 = censored
df["event"] = np.where(
    (df.get("vital_status", "").str.upper() == "DEAD") |
    (df["disease_status"] == "WITH TUMOR"),
    1,
    0
)

# Time variable (prefer death, fallback to last follow-up)
df["time"] = df["days_to_death"].fillna(df["days_to_last_followup"])

df[["time", "event"]].describe()

# Event: 1 = death or tumor persistence, 0 = censored
df["event"] = np.where(
    (df.get("vital_status", "").str.upper() == "DEAD") |
    (df["disease_status"] == "WITH TUMOR"),
    1,
    0
)

# Time variable (prefer death, fallback to last follow-up)
df["time"] = df["days_to_death"].fillna(df["days_to_last_followup"])

df[["time", "event"]].describe()

df_surv = df.dropna(subset=["time"])

print("Survival dataset shape:", df_surv.shape)
print("Event rate:", df_surv["event"].mean())

kmf = KaplanMeierFitter()

kmf.fit(
    durations=df_surv["time"],
    event_observed=df_surv["event"],
    label="All Patients"
)

kmf.plot_survival_function()
plt.title("Kaplanâ€“Meier Survival Curve (All Patients)")
plt.xlabel("Days")
plt.ylabel("Survival Probability")
plt.show()

df_surv["stage_group"] = np.where(
    df_surv["ajcc_stage"].str.contains("STAGE I", na=False),
    "EARLY",
    "ADVANCED"
)

kmf_early = KaplanMeierFitter()
kmf_adv = KaplanMeierFitter()

plt.figure()

kmf_early.fit(
    df_surv[df_surv["stage_group"] == "EARLY"]["time"],
    df_surv[df_surv["stage_group"] == "EARLY"]["event"],
    label="Early Stage"
)
kmf_early.plot_survival_function()

kmf_adv.fit(
    df_surv[df_surv["stage_group"] == "ADVANCED"]["time"],
    df_surv[df_surv["stage_group"] == "ADVANCED"]["event"],
    label="Advanced Stage"
)
kmf_adv.plot_survival_function()

plt.title("Survival by AJCC Stage Group")
plt.xlabel("Days")
plt.ylabel("Survival Probability")
plt.show()

results = logrank_test(
    df_surv[df_surv["stage_group"] == "EARLY"]["time"],
    df_surv[df_surv["stage_group"] == "ADVANCED"]["time"],
    event_observed_A=df_surv[df_surv["stage_group"] == "EARLY"]["event"],
    event_observed_B=df_surv[df_surv["stage_group"] == "ADVANCED"]["event"]
)

results.print_summary()

cox_features = [
    "age_at_diagnosis",
    "high_t_stage",
    "node_positive",
    "metastatic",
    "marker_elevated",
    "tmb_log",
    "time",
    "event"
]

df_cox = df_surv.merge(
    pd.read_csv("../data/processed/testicular_cancer_engineered.csv"),
    on="patient_id"
)[cox_features]

df_cox.head()

cph = CoxPHFitter()
cph.fit(df_cox, duration_col="time", event_col="event")

cph.print_summary()

cph.plot()
plt.title("Cox Proportional Hazards Model")
plt.show()

cph.check_assumptions(df_cox, p_value_threshold=0.05)

survival_summary = pd.DataFrame({
    "Variable": cph.params_.index,
    "Hazard_Ratio": np.exp(cph.params_.values),
    "p_value": cph.summary["p"]
}).sort_values("Hazard_Ratio", ascending=False)

survival_summary

