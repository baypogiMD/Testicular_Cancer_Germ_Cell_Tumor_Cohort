import pandas as pd
import numpy as np

pd.set_option("display.max_columns", None)
pd.set_option("display.width", 120)

print("Feature engineering libraries loaded.")

DATA_PATH = "../data/processed/testicular_cancer_cleaned.csv"

df = pd.read_csv(DATA_PATH)

print(f"Dataset loaded: {df.shape}")

df["target"] = df["disease_status"].map({
    "TUMOR FREE": 0,
    "WITH TUMOR": 1
})

df["target"].value_counts()

df["stage_group"] = np.where(
    df["ajcc_stage"].str.contains("STAGE I", na=False),
    "EARLY",
    "ADVANCED"
)

df["stage_group"].value_counts()

df["high_t_stage"] = df["ajcc_t_stage"].isin(["T2", "T3", "T4"]).astype(int)
df["node_positive"] = df["ajcc_n_stage"].isin(["N1", "N2", "N3"]).astype(int)
df["metastatic"] = df["ajcc_m_stage"].isin(["M1"]).astype(int)

df[["high_t_stage", "node_positive", "metastatic"]].sum()

df["marker_elevated"] = df["serum_marker_stage"].isin(["S1", "S2", "S3"]).astype(int)

df["marker_elevated"].value_counts()

df["tmb_log"] = np.log1p(df["tumor_mutational_burden"])

df[["tumor_mutational_burden", "tmb_log"]].describe()

df["age_group"] = pd.cut(
    df["age_at_diagnosis"],
    bins=[0, 25, 35, 45, 100],
    labels=["<25", "25–35", "35–45", "45+"]
)

df["age_group"].value_counts()

feature_cols = [
    "age_at_diagnosis",
    "high_t_stage",
    "node_positive",
    "metastatic",
    "marker_elevated",
    "tmb_log"
]

X = df[feature_cols]
y = df["target"]

X.head(), y.head()

X.isnull().sum()

# Median imputation (clinically safe for continuous variables)
X["age_at_diagnosis"] = X["age_at_diagnosis"].fillna(X["age_at_diagnosis"].median())
X["tmb_log"] = X["tmb_log"].fillna(X["tmb_log"].median())

from sklearn.preprocessing import StandardScaler

scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)

X_scaled = pd.DataFrame(X_scaled, columns=feature_cols)

X_scaled.describe()

engineered_df = pd.concat([df[["patient_id", "target"]], X], axis=1)

OUTPUT_PATH = "../data/processed/testicular_cancer_engineered.csv"
engineered_df.to_csv(OUTPUT_PATH, index=False)

print(f"Engineered dataset saved to: {OUTPUT_PATH}")

feature_summary = pd.DataFrame({
    "feature": feature_cols,
    "type": ["continuous", "binary", "binary", "binary", "binary", "continuous"],
    "clinical_meaning": [
        "Age at diagnosis",
        "Tumor invasion beyond T1",
        "Regional lymph node involvement",
        "Distant metastasis",
        "Serum tumor marker elevation",
        "Tumor mutational burden (log-scaled)"
    ]
})

feature_summary

